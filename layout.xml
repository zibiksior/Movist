<?xml version="1.0" encoding="utf-8"?>
<layout onVolumeUp="volume_up" onVolumeDown="volume_down">
	<tabs index="0">
		<tab text="Playback">
			<row>
				<button icon="vdown" onTap="volume_down"/>
				<button icon="vmute" onTap="volume_mute"/>
				<button icon="vup" onTap="volume_up"/>
			</row>
			<row>
				<button icon="previous" onTap="previous"/>
				<button icon="playpause" onTap="play_pause"/>
				<button icon="next" onTap="next"/>
			</row>
			<row>
				<button icon="fullscreen" onTap="fullscreen"/>
			</row>
		</tab>
		<tab text="Audio/Subtitles">
			<row weight="wrap">
				<label color="hard" text="Subtitle delay"/>
			</row>
			<row>
				<button text="Switch subtitle" onTap="subtitle"/>
			</row>
			<row>
				<button text="-0.1s" onTap="slower"/>
				<button text="+0.1s" onTap="faster"/>
			</row>
			<row weight="wrap">
				<label color="hard" text="Audio delay"/>
			</row>
			<row>
				<button text="Switch audio" onTap="audio"/>
			</row>
			<row >
				<button icon="down" onTap="audio_delay_down"/>
				<button icon="up" onTap="audio_delay_up"/>
			</row>
		</tab>
	</tabs>
</layout>
